
@{
    ViewBag.Title = "FIT_IS";
}

<h2>FIT_IS</h2>

<table>
    <tr>
        <td>Авторизация выполнена? </td>
        <td>@(User.Identity.IsAuthenticated? "да":"нет" )</td>
    </tr>
    <tr>
        <td>Текущий пользователь </td>
        <td>@(!String.IsNullOrEmpty(User.Identity.Name) ? User.Identity.Name : "--" )</td>
    </tr>
    <tr>
        <td>Текущий пользователь имеет роль Administrator?  </td>
        <td>@(User.IsInRole("Administrator")? "да":"нет" )</td>
    </tr>
    <tr>
        <td>Текущий пользователь имеет роль Employer? </td>
        <td>@(User.IsInRole("Employer") ? "да":"нет" )</td>
    </tr>
</table>

<div>
    @Html.ActionLink("FIT/Index", "/Index", "FIT")<br />

</div>